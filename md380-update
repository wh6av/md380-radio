				echo ""
				sleep 5
				sudo make clean
				echo "$(cat /root/.fullname) $(cat /root/.callsign) MD380TOOLS INSTALL executed at $timestamp1 " >> $LOGFILE
			elif [ "$dist" == "Raspbian" ]; then
				echo ""
				echo "OK.  Building for Raspbian."
				echo ""
				sleep 5
				sudo make dist clean
				echo "$(cat /root/.fullname) $(cat /root/.callsign) MD380TOOLS INSTALL executed at $timestamp1 " >> $LOGFILE

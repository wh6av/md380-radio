	12) echo ""
		while true
		do
		clear
		timestamp1=`date --rfc-3339=seconds`
		read -p 'Are you sure you want to add MMDVMHost service and timer related files and enable them?  Y or N  '  srvtimevar
		case $srvtimevar in
			[yY]* ) echo ""

				cd /lib/systemd/system/
